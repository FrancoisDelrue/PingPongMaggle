<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.retrogaming.pong" android:versionName="0.2.1" android:versionCode="8">
	<application android:icon="@drawable/icon" android:label="RetroPong">
		<activity android:name=".MainActivity" android:label="RetroGaming"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".PongPreferencesActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Pong"
            android:screenOrientation="portrait"/>
		<activity android:name=".GameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".NamePlayer"
            android:screenOrientation="portrait"/>
        <activity android:name=".Score"
            android:screenOrientation="portrait"/>
        <activity android:name=".Construction" android:label="Coming Soon"
            android:screenOrientation="portrait"/>
	</application>
	<uses-sdk android:minSdkVersion="11" />
	<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
</manifest> 