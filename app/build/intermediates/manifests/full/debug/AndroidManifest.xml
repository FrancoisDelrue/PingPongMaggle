<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.retrogaming.pong"
    android:versionCode="8"
    android:versionName="0.2.1" >

    <uses-sdk android:minSdkVersion="11" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/icon"
        android:label="RetroPong" >
        <activity
            android:name="com.retrogaming.pong.MainActivity"
            android:label="RetroGaming"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.retrogaming.pong.PongPreferencesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.retrogaming.pong.Pong"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.retrogaming.pong.GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.retrogaming.pong.NamePlayer"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.retrogaming.pong.Score"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.retrogaming.pong.Construction"
            android:label="Coming Soon"
            android:screenOrientation="portrait" />
    </application>

</manifest>